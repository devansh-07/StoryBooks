<h3>Edit Story</h3>
<form action="/stories/<%= story._id %>" method="POST">
    <input type="hidden" name="_method" value="PUT">

    <div class="form-group">
        <label for="title">Title</label>
        <input class="form-control" id="title" type="text" name="title" placeholder="Title" value="<%= story.title %>">
    </div>

    <div class="form-group">
        <label for="status">Status</label>

        <select name="status" class="form-control" id="status">
            <option value="public" <% if (story.status === "public"){ %> selected <% } %>>Public</option>
            <option value="private" <% if (story.status === "private"){ %> selected <% } %>>Private</option>
        </select>
    </div>

    <div class="form-group">
        <label for="body">Body</label>
        <textarea class="form-control" name="body" id="body" cols="30" rows="10" placeholder="Put your story here..."><%= story.body %></textarea>
    </div>


    <div class="form-group">
        <button type="submit" class="btn btn-sm btn-primary px-3">Save</button>
        <a class="btn btn-sm btn-danger px-3" href="/dashboard">Cancel</a>
    </div>
</form>