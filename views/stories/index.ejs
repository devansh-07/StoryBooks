<div class="m-0 p-0">
    <h2>Stories</h2>
    <hr>
    
    <div class="row">
        <% if (stories.length > 0) { %>
            <% stories.forEach((story)=> { %>
                <div class="col col-lg-4 col-md-6">
                    <div class="card text-center py-3 pt-4">
                        <% if (story.user._id.toString() == locals.user._id.toString()) { %>
                            <div class="p-0 m-0">
                                <a href="/stories/edit/<%= story._id %>" class="btn btn-sm btn-primary mt-1 mr-1" style="position: absolute; right: 0; top: 0;">
                                    <i class="fas fa-edit fa-small"></i>
                                </a>
                            </div>
                        <% } %>

                        <div class="card-body">
                            <h5 class="card-title"><%= story.title %></h5>
                            <p class="card-text"><%= story.body %></p>

                            <div class="row text-center my-4 profile-tag">
                                <div class="col-auto mx-auto bg-lightgrey pl-0 py-0">
                                    <img src="<%= story.user.image %>" >
                                    <a href="/stories/user/<%= story.user._id %> %>" class="plain-anchor">
                                        <%= story.user.displayName %>
                                    </a>
                                </div>
                            </div>

                            <div class="card-action">
                                <a href="/stories/<%= story._id %>" class="btn btn-secondary btn-sm">Read More</a>
                            </div>
                        </div>
                    </div>
                </div>
            <% }) %>
        <% } else { %>
            <p class="text-center text-secondary" style="font-size: 1.2em;">No Stories :(</p>
        <% } %>
    </div>
</div>